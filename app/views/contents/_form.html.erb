<%= form_with(model: content, local: true) do |form| %>
  <% if content.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(content.errors.count, "error") %> prohibited this content from being saved:</h2>

      <ul>
      <% content.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :document_id %>
    <%= collection_select(:content, :document_id, Document.all, :id, :title, prompt: true) %>
  </div>

  <div class="field">
    <%= form.label :section_id %>
    <%= collection_select(:content, :section_id, Section.all, :id, :title, prompt: true) %>
  </div>

  <div class="field">
    <%= form.label :variant_id %>
    <%= collection_select(:content, :variant_id, Variant.all, :id, :name, prompt: true) %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, id: :content_body, class: 'markdown', rows:10, cols: 80 %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
