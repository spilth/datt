<p id="notice"><%= notice %></p>

<h1>Contents</h1>

<table class="table">
  <thead>
    <tr>
      <th>Document</th>
      <th>Section</th>
      <th>Variant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contents.each do |content| %>
      <tr>
        <td><%= content.document.title %></td>
        <td><%= content.section.title %></td>
        <td><%= content.variant.name %></td>
        <td><%= link_to 'Show', content %></td>
        <td><%= link_to 'Edit', edit_content_path(content) %></td>
        <td><%= link_to 'Destroy', content, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

